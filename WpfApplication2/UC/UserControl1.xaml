<UserControl x:Class="WpfApplication2.UC.UserControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApplication2.UC"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <StackPanel>
            <TextBlock x:Name="txtBlId" Text="Id" />
            <TextBox x:Name="txtBoId" Text="{Binding Class1.Id}" />
            <TextBlock x:Name="txtBlName" Text="Name" />
            <TextBox x:Name="txtBoName" Text="{Binding Class1.Name}" />
            <TextBlock x:Name="txtBlSurname" Text="Surname" />
            <TextBox x:Name="txtBoSurname" Text="{Binding Class1.Surname}" />
            <ProgressBar x:Name="progress" Value="{Binding Class1.Id}"/>
        </StackPanel>
    </Grid>
</UserControl>
